<div class= "col-xs-10 col-xs-offset-1">
  <h4 class="col-xs-offset-1", style="padding-bottom: 20px;"><span style="background-color: #DDDDDD; padding: .3em;">　新規会員登録　</span></h4>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= render "customers/customer_form", f: f %>

    <div class="form-group customer-form col-xs-12">
      <%= f.label :password, "　　パスワード(6文字以上)", class: "col-xs-3" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-inline col-xs-3 col-xs-offset-1" %>
    </div>

    <div class="form-group customer-form col-xs-12">
      <%= f.label :password_confirmation, "　　パスワード(確認用)", class: "col-xs-3" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-inline col-xs-3 col-xs-offset-1" %>
    </div>

    <div class="active">
      <%= f.submit "　新規登録　",class: "btn btn-success col-xs-2 col-xs-offset-6" %>
    </div>
  <% end %>

  <div class="col-xs-11 col-xs-offset-1", style="margin-top: 20px;">
    <h4><span style="background-color: #DDDDDD; padding: .3em;">　既に登録済みの方　</span></h4>
    <p class="col-xs-offset-1 deco-link", style="padding-top: 10px;"><%= link_to "こちら ", new_customer_session_path %> からログインしてください。</p>
  </div>

<%#= render "devise/shared/links" %>
</div>