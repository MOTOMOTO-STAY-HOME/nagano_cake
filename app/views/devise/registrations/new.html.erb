<div class= "col-xs-10 col-xs-offset-1">
  <h4 class="col-xs-offset-1", style="padding-bottom: 10px;"><span style="background-color: #DDDDDD; padding: .3em;">　新規会員登録　</span></h4>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group sign-up-form">
      <label class="col-xs-3">名前</label>
      <%= f.label :last_name, "(姓)", class: "col-xs-1" %>
      <%= f.text_field :last_name, autofocus: true, autocomplete: "姓", class: "form-inline col-xs-3" %>
      <%= f.label :first_name, "(名)", class: "col-xs-1" %>
      <%= f.text_field :first_name, autofocus: true, autocomplete: "名前", class: "form-inline col-xs-3" %>
    </div>

    <div class="form-group sign-up-form">
      <label class="col-xs-3">フリガナ</label>
      <%= f.label :kana_last_name, "(セイ)", class: "col-xs-1" %>
      <%= f.text_field :kana_last_name, autofocus: true, autocomplete: "セイ", class: "form-inline col-xs-3" %>
      <%= f.label :kana_first_name, "(メイ)", class: "col-xs-1" %>
      <%= f.text_field :kana_first_name, autofocus: true, autocomplete: "メイ", class: "form-inline col-xs-3" %>
    </div>

    <div class="form-group sign-up-form">
      <%= f.label :email, "メールアドレス", class: "col-xs-3" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "メールアドレス", class: "form-inline col-xs-7 col-xs-offset-1" %>
    </div>

    <div class="form-group sign-up-form">
      <%= f.label :postal_code, "郵便番号(ハイフンなし)", class: "col-xs-3" %>
      <%= f.text_field :postal_code, autofocus: true, autocomplete: "郵便番号", class: "form-inline col-xs-7 col-xs-offset-1" %>
    </div>

    <div class="form-group sign-up-form">
      <%= f.label :address, "住所", class: "col-xs-3" %>
      <%= f.text_field :address, autofocus: true, autocomplete: "住所", class: "form-inline col-xs-7 col-xs-offset-1" %>
    </div>

    <div class="form-group sign-up-form">
      <%= f.label :phone, "電話番号(ハイフンなし)", class: "col-xs-3" %>
      <%= f.text_field :phone, autofocus: true, autocomplete: "電話番号", class: "form-inline col-xs-7 col-xs-offset-1" %>
    </div>

    <div class="form-group sign-up-form">
      <%= f.label :password, "パスワード(6文字以上)", class: "col-xs-3" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-inline col-xs-7 col-xs-offset-1" %>
    </div>

    <div class="form-group sign-up-form">
      <%= f.label :password_confirmation, "パスワード(確認用)", class: "col-xs-3" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-inline col-xs-7 col-xs-offset-1" %>
    </div>

    <div class="active">
      <%= f.submit "新規登録",class: "btn btn-success col-xs-3 col-xs-offset-5" %>
    </div>
  <% end %>

  <div class="col-xs-11 col-xs-offset-1">
    <h4><span style="background-color: #DDDDDD; padding: .3em;">　既に登録済みの方　</span></h4>
    <p class="col-xs-offset-1", style="padding-top: 10px;"><%= link_to "こちら ", new_customer_session_path %> からログインしてください。</p>
  </div>

<%#= render "devise/shared/links" %>
</div>