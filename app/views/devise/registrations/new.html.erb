<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <p>名前</p>
    <%= f.label :last_name, "(姓)" %>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "姓" %>
    <%= f.label :first_name, "(名)" %>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "名前" %>
  </div>

  <div class="field">
    <p>フリガナ</p>
    <%= f.label :kana_last_name, "(セイ)" %>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "セイ" %>
    <%= f.label :kana_first_name, "(メイ)" %>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "メイ" %>
  </div>

  <div class="field">
    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "メールアドレス" %>
  </div>

  <div class="field">
    <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "郵便番号" %>
  </div>

  <div class="field">
    <%= f.label :address, "住所" %>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "郵便番号" %>
  </div>

  <div class="field">
    <%= f.label :phone, "電話番号(ハイフンなし)" %>
    <%= f.text_field :phone, autofocus: true, autocomplete: "電話番号" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード(6文字以上)" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード(確認用)" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録",class: "btn btn-success" %>
  </div>
<% end %>

<h2>既に登録済の方</h2>
  <p><%= link_to "こちら", new_customer_session_path %>からログインしてください。</p>

<%= render "devise/shared/links" %>
