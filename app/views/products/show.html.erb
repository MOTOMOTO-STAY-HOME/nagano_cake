<div class = container>
	<div class = row>

		<div class = 'col-xs-6'>
		<%= attachment_image_tag @product, :image, :fill, 300, 300,  fallback: "no-image.jpg"%>
		</div>

		<div class = 'col-xs-6'>
			<table>
				<thead>
					<tr>
						<th style="border:none;"></th>
					</tr>
				</thead>

				<tbody>
						<tr>
							<td>
								<h2><%= @product.name %></h2>
							</td>
						</tr>
						<tr>
							<td class="panel-body">
								<%= @product.discription %>
							</td>
						</tr>
						<tr>
							<td>
								<h4>¥ <%= (@product.no_tax_price * 1.1.to_f).floor %></h4>
								<h6>(税込)</h6>
							</td>
						</tr>
						<tr>
							<td>
							      	<%= form_for @cart_product do |f| %>
							      		<%= f.hidden_field :product_id, value: @product.id %>
							      		<%= f.select :quantity, options_for_select((1..10).to_a), {include_blank: "個数選択"}, {:class => "form-inline input-sm"} %>
							      		<%= f.submit "カートに入れる", class: "btn btn-primary", style: "margin-left: 20px;" %>
						      		<% end %>
						      	</div>
							</td>
						</tr>
				</tbody>
			</table>
		</div>

	</div>
</div>
