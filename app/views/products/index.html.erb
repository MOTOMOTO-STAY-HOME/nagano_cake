<div class='col-xs-3'>
    <%= render 'product_genres/sidebar', product_genres: @product_genres %>
</div>

	<div class='col-xs-9'>
		<h2>商品一覧</h2><h6>(全X件)</h6>

		<div class='col-xs-3'>
			<% @products.each do |product| %>
			<%= attachment_image_tag product, :image, :fill, 100, 100,  fallback: "no-image.jpg"%>
				<%= product.name %>
				<p>￥<%= product.no_tax_price %></p>
			<% end %>
		</div>
	</div>


