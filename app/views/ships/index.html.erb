<h4 class="col-xs-offset-1", style="padding-bottom: 30px;"><span style="background-color: #DDDDDD; padding: .3em;">　配送先一覧／登録　</span></h4>

<%= form_for(@ship) do |f| %>
	<%= render "ship_form", f: f %>

	<div class="active">
	  <%= f.submit "　　登録する　　", class: "btn btn-success col-xs-offset-3" %>
	</div>
<% end %>

<div class="col-xs-8">
	<table class="table table-bordered" style="margin: 40px 0;">
		<tbody>
			<tr>
				<th class="active", style="height: 40px; width: 15%">郵便番号</th>
				<th class="active", style="height: 40px; width: 35%">住所</th>
				<th class="active", style="height: 40px; width: 20%">宛名</th>
					<% if current_customer.ships.exists? %>
						<th class="active", style="height: 40px; width: 25%"></th>
					<% end %>
			</tr>
			<tr>
				<td style="height: 50px; vertical-align: middle;">
					<%= current_customer.postal_code %>
				</td>
				<td style="vertical-align: middle;"><%= current_customer.address %></td>
				<td style="vertical-align: middle;">ご自身の住所</td>
				<% if current_customer.ships.exists? %>
					<td></td>
				<% end %>
			</tr>
			<% @ships.each do |ship| %>
				<tr>
					<td style="vertical-align: middle;"><%= ship.postal_code %></td>
					<td style="vertical-align: middle;"><%= ship.address %></td>
					<td style="vertical-align: middle;"><%= ship.name %></td>
					<td style="vertical-align: middle;">
						<div style="display: flex; justify-content: space-between;">
							<%= link_to "編集する", edit_ship_path(ship.id), class: "btn btn-primary", data: { "turbolinks": false } %>
							<%= link_to "削除する", ship_path(ship.id), method: :delete, class: "btn btn-danger" %>
						</div>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
	<%= paginate @ships %>
</div>
