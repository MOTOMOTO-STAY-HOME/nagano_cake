<table>
  <h2>注文履歴詳細</h2>
  <thead>
    <tr>
      <th>購入者</th>
      <th><% @order.last_name %></th>
      <th><% @order.first_name %></th>
    </tr>
    <tbody>
      <tr>
        <td class="panel-body">配送先</td>
        <td>〒<%= @order.shipping_postal_code %>
              <%= @order.shipping_address %>
        </td>
      </tr>
      <tr>
        <td class="panel-body"></td>
        <td><%= @order.shipping_name %></td>
      </tr>
      <tr>
        <td class="panel-body">支払方法</td>
        <td><%= @order.payment_method %></td>
      </tr>
      <tr>
        <td class="panel-body">注文ステータス</td>
        <% form_with url:admins_order_products_path, method: :patch local: true do |os| %>
        <td class="field"><%= os.select :order_status, Order.order_statuses.keys.to_a, {} %></td>
      </tr>
    </tbody>
  </thead>
</table>
