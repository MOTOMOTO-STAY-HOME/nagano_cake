<div>
	<span>注文内容</span>
		<tr>
			<th>商品</th>
			<th>単価(税込)</th>
			<th>個数</th>
			<th>小計</th>
			<th>製作ステータス</th>
			<th></th>
		</tr>
    <% OrderProduct.where(order_id: order.id ).each do |op| %>
		<tr>

			<td><%= op.product.name %></td>
			<td><%= op.product.no_tax_price.to_i*1.1 %></td>
			<td><%= op.quantity %></td>
			<td><%= op.product.no_tax_price.to_i*1.1*op.quantity %></td>
			<% form_with(model: order, url:admins_order_path(order.id), method: :patch, local: true) do |os| %>
			<td>
				<%= os.select :production_status, [["着手不可",0],["製作待ち",1],["製作中",2],["製作済み",3]] %>
			</td>
			<td><%= os.submit "更新" %></td>
			<% end %>
		</tr>
		<% end %>
</div>
