<div class='col-xs-9'>
<h2>注文履歴一覧</h2>

<table class="panel panel-default">
  <thead>
    <tr>
      <th class="panel-heading">購入日時</th>
      <th class="panel-heading">購入者</th>
      <th class="panel-heading">注文個数</th>
      <th class="panel-heading">注文ステータス</th>
    </tr>
  </thead>
  <tbody>
<% @orders.each do |o| %>
    <tr>
      <td>
        <% link_to admins_order_path(o.id) do %>
        <%= o.created_at %>
        <% end %>
      </td>
      <td><%= o.customer.last_name %><%= o.customer.first_name %></td>
      <td><%= OrderProduct.where(order_id: o.id).sum(:quantity) %></td>
      <td><%= o.order_status %></td>
    </tr>
    <% end %>
  </tbody>
</table>
