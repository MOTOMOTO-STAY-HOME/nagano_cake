<h1><%= @customer.last_name %>さんの会員情報編集</h1>
<table class="table">

  <tbody>
    <tr>
      <th>会員ID</th>
      <th><%= @customer.id %></th>
    </tr>
    <tr>
      <th>氏名</th>
        <%= form_for @customer, url: admins_customer_path(@customer.id) do |c| %>
          <th><%= c.text_field :last_name %></th>
          <th><%= c.text_field :first_name %></th>
    </tr>
    <tr>
      <th>フリガナ</th>
        <th><%= c.text_field :kana_last_name %></th>
        <th><%= c.text_field :kana_first_name %></th>
    </tr>
    <tr>
      <th>郵便番号</th>
        <th><%= c.text_field :postal_code %></th>
    </tr>
    <tr>
      <th>住所</th>
        <th><%= c.text_field :address %></th>
    </tr>
    <tr>
      <th>電話番号</th>
        <th><%= c.text_field :phone %></th>
    </tr>
    <tr>
      <th>メールアドレス</th>
        <th><%= c.text_field :email%></th>
    </tr>
    <tr>
    <th>会員ステータス</th>
    <th>
      <div class="field">
        <th><%= c.radio_button :is_active, :true %></th>
        <th><%= c.label :is_active, "有効" %></th>
        <th><%= c.radio_button :is_active, :false %></th>
          <th><%= c.label :is_active, "退会済み" %></th>
        </div>
      </th>
    </tr>
    <tr>
      <%= c.submit "変更を保存する" %>
    </tr>
    <% end %>

  </tbody>

</table>

</div>
