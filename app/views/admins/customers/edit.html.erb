<h4 class="col-xs-offset-1", style="padding-bottom: 30px;"><span style="background-color: #DDDDDD; padding: .3em;"><%= @customer.full_name %>さんの会員情報編集</span></h4>
<table class="table">

  <tbody>
    <tr>
      <th class="active col-xs-2", style="height: 40px;">会員ID</th>
      <th><%= @customer.id %></th>
    </tr>
    <tr>
      <th class="active col-xs-2", style="height: 40px;">氏名</th>
        <%= form_for @customer, url: admins_customer_path do |c| %>
          <th><%= c.text_field :last_name %></th>
          <th><%= c.text_field :first_name %></th>
    </tr>
    <tr>
      <th class="active col-xs-2", style="height: 40px;">フリガナ</th>
        <th><%= c.text_field :kana_last_name %></th>
        <th><%= c.text_field :kana_first_name %></th>
    </tr>
    <tr>
      <th class="active col-xs-2", style="height: 40px;">郵便番号</th>
        <th><%= c.text_field :postal_code %></th>
    </tr>
    <tr>
      <th class="active col-xs-2", style="height: 40px;">住所</th>
        <th><%= c.text_field :address %></th>
    </tr>
    <tr>
      <th class="active col-xs-2", style="height: 40px;">電話番号</th>
        <th><%= c.text_field :phone %></th>
    </tr>
    <tr>
      <th class="active col-xs-2", style="height: 40px;">メールアドレス</th>
        <th><%= c.text_field :email%></th>
    </tr>
    <th class="active col-xs-2", style="height: 40px;">会員ステータス</th>
      <div class="field">
        <th><%= c.radio_button :is_active, :true %>
        <%= c.label :is_active, "有効" %>
        <%= c.radio_button :is_active, :false %>
        <%= c.label :is_active, "退会済み" %></th>
        </div>
    <tr>
      <th>
      <%= c.submit "変更を保存する", class: "btn btn-primary" %>
      </th>
    </tr>
    <% end %>

  </tbody>

</table>
