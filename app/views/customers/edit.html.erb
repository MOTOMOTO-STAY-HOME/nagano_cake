<div class= "col-xs-10 col-xs-offset-1">
  <h4 class="col-xs-offset-1", style="padding-bottom: 30px;"><span style="background-color: #DDDDDD; padding: .3em;">　登録情報編集　</span></h4>

  <div id= "errors_explanation">
    <% if @customer.errors.any? %>
      <h3><%= pluralize(@customer.errors.count, "error") %> prohibited this obj from being saved:</h3>
      <% @customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    <% end %>
  </div>

  <%= form_for(@customer, url: customers_path) do |f| %>
    <%= render "devise/shared/error_messages", resource: @customer %>
    <%= render "customers/customer_form", f: f %>

    <div class="active">
      <%= f.submit "　編集内容を保存する　", class: "btn btn-primary col-xs-3 col-xs-offset-3", style: "margin-top: 30px;" %>
    </div>
  <% end %>

  <div>
      <%= link_to "　退会する　", customers_last_confirm_path, class: "btn btn-danger col-xs-2 col-xs-offset-3", style: "margin-top: 30px;"  %>
  </div>

</div>