  <%= f.text_field :postal_code, autofocus: true, autocomplete: "郵便番号", class: "form-inline col-xs-3 col-xs-offset-1" %>
</div>

<div class="form-group customer-form col-xs-12">
  <%= f.label :address, "　　住所", class: "col-xs-3" %>
