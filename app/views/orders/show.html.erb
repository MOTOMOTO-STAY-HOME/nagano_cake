<h3>注文履歴詳細</h3>

<div>
	<span>注文情報</span>
	<table border="1">
		<tr>
			<td>注文日</td>
			<td><%= @order.created_at %></td>
		</tr>
		<tr>
			<td>配送先</td>
			<td><%= @order.shipping_postal_code %>
				<%= @order.shipping_address %>
				<%= @order.shipping_name %>
			</td>
		</tr>
		<tr>
			<td>支払方法</td>
			<td><%= @order.payment_method %></td>
		</tr>
		<tr>
			<td>ステータス</td>
			<td><%= @order.order_status %></td>
		</tr>
	</table>
</div>

<div>
	<span>請求情報</span>
	<table border="1">
		<tr>
			<td>商品合計</td>
			<td><%= @order.total_price %></td>
		</tr>
		<tr>
			<td>配送料</td>
			<td><%= @order.postages_price %></td>
		</tr>
		<tr>
			<td>ご請求額</td>
			<td><%= @order.amount_price %></td>
		</tr>
	</table>
</div>

<div>
	<span>注文内容</span>
	<table border="1">
		<tr>
			<th>商品</th>
			<th>単価(税込)</th>
			<th>個数</th>
			<th>小計</th>
		</tr>
			<% @order.order_products.each do |order_product| %>
		<tr>
			<td><%= order_product.product.name %></td>
			<td><%= order_product.include_tax_unit_price %></td>
			<td><%= order_product.quantity %></td>
			<td><%= order_product.include_tax_total_price %></td>
		</tr>
		<% end %>
	</table>
</div>
