<h4 class="col-xs-offset-1", style="padding: 20px 0;"><span style="background-color: #DDDDDD; padding: .3em;">　注文履歴一覧　</span></h4>

<% if current_customer.orders.exists? %>
	<div class="col-xs-12">
		<table class="table table-bordered table-align-middle", style="margin: 20px 0;">
			<tbody>
				<tr>
					<th class="active", style="height: 40px; width: 10%">注文日</th>
					<th class="active", style="height: 40px; width: 40%">配送先</th>
					<th class="active", style="height: 40px; width: 20%">注文商品</th>
					<th class="active", style="height: 40px; width: 10%">支払金額</th>
					<th class="active", style="height: 40px; width: 10%">ステータス</th>
					<th class="active", style="height: 40px; width: 10%">注文詳細</th>
				</tr>
				<% if @orders.exists? %>
					<% @orders.each do |order| %>
						<tr>
							<td style="vertical-align: middle;"><%= order.created_at %></td>
							<td><%= order.shipping_postal_code %><br>
								<%= order.shipping_address %><br>
								<%= order.shipping_name %>
							</td>
							<td style="vertical-align: middle;">
								<% order.order_products.each do |order_product| %>
									<%= order_product.product.name %><br>
								<% end %>
							</td>
							<td style="vertical-align: middle;"><%= order.amount_price.to_s(:delimited) %>円</td>
							<td style="vertical-align: middle;"><%= order.order_status %></td>
							<td style="vertical-align: middle; text-align: center;"><%= link_to "表示する", order_path(order.id), class: "btn btn-primary" %></td>
						</tr>
					<% end %>
				<% end %>
			</tbody>
		</table>
	</div>
<% else %>
	<p class= "col-xs-offset-1">注文履歴はありません。</p>
<% end %>