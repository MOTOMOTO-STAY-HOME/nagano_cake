<h3>注文情報入力</h3>

<div>

	<%= form_with model: @order, url: orders_confirm_path, local: true do |f| %>
		<span>支払方法</span>

		<div>
			<%= f.radio_button :payment_method,"クレジットカード" %>
			<%= f.label :payment_method,"クレジットカード" %>
		</div>

		<div>
			<%= f.radio_button :payment_method,"銀行振込" %>
			<%= f.label :payment_method,"銀行振込" %>
		</div>


		<span>お届け先</span>

		<div>
			<%= f.radio_button :ship,"address 1" %>
			<%= f.label :shipping_address,"ご自身の住所" %>
			<div style="color:#0000FF">
				<%= current_customer.postal_code %><%= current_customer.address %><br>
				<%= current_customer.last_name %><%= current_customer.first_name %>
			</div>
		</div>

		<div>
			<%= f.radio_button :ship,"address 2" %>
			<%= f.label :shipping_address,"登録済住所から選択" %>
			<div style="color:#0000FF">
				<%= f.collection_select :shipping_name, current_customer.ships, :id, :full_address %>
			</div>
		</div>

		<div>
			<%= f.radio_button :ship,"address 3" %>
			<%= f.label :shipping_address,"新しいお届け先" %>
			<div style="display: inline-flex;">
				<div>郵便番号(ハイフンなし)</div>
				<%= f.text_area :shipping_postal_code %>
			</div><br>
			<div style="display: inline-flex;">
				<div>住所</div>
				<%= f.text_area :shipping_address %>
			</div><br>
			<div style="display: inline-flex;">
				<div>宛名</div>
				<%= f.text_area :shipping_name %>
			</div>
		</div>
		<div>
				<%= f.submit "確認画面へ進む", class: "btn btn-primary" %>
		</div>
	<% end %>
</div>
