<div class="container">
		<div class="row">
			<h3>注文情報確認</h3>
		</div>

	<%= form_with(model: @order, local: true) do |f| %>
		<%= f.hidden_field :shipping_postal_code, value: @order.shipping_postal_code %>
		<%= f.hidden_field :shipping_address, value: @order.shipping_address %>
		<%= f.hidden_field :shipping_name, value: @order.shipping_name %>
		<%= f.hidden_field :total_price, value: @order.total_price %>
		<%= f.hidden_field :payment_method , value: @order.payment_method %>

		<div class="col-xs-8">
			<table class="panel panel-default">
					<tr>
						<th class="panel-heading">商品名</th>
						<th class="panel-heading">単価(税込)</th>
						<th class="panel-heading">数量</th>
						<th class="panel-heading">小計</th>
					</tr>
					<% @cart_products.each do |cart_product| %>
						<tr>
							<td class="panel-body">
								<%= attachment_image_tag cart_product.product, :image, :fill, 80, 50, format: 'jpeg', style: "margin: 5px 5px;", fallback: "no-image.jpg", size: "80x50" %>
								<%= cart_product.product.name %>
							</td>
							<td class="panel-body">
								<%= cart_product.include_tax_unit_price %>
							</td>
							<td class="panel-body">
								<%= cart_product.quantity %>
							</td>
							<td class="panel-body">
								<%= cart_product.include_tax_total_price %>
							</td>
						</tr>
					<% end %>
			</table>

			<div>
				<strong>支払い方法：</strong>
				<%= @order.payment_method %>
			</div>

			<div>
				<strong>お届け先：</strong>
				<%= @order.shipping_postal_code %>　
				<%= @order.shipping_address %><br>
				<%= @order.shipping_name %>
			</div>

			<% if params[:order][:ship] == "new_address" %>
				<%= fields_for @ship do |ship| %>
					<%= ship.hidden_field :postal_code, value: @order.shipping_postal_code %>
					<%= ship.hidden_field :address, value: @order.shipping_address %>
					<%= ship.hidden_field :name, value: @order.shipping_name %>
				<% end %>
			<% end %>

			<%= hidden_field_tag :flag, @flag %>
				<div align="center">
					<%= f.submit '購入を確定する', class:"btn btn-success" %>
				</div>
			<% end %>

		</div>


			<div class="col-xs-4">
				<table class="panel panel-default">
					<tr>
						<td class="panel-heading">送料</td>
						<td class="panel-body">
							<%= @order.postages_price %>
						</td>
					</tr>
					<tr>
						<td class="panel-heading">商品合計</td>
						<td class="panel-body">
							<%= @order.total_price %>
						</td>
					</tr>
					<tr>
						<td class="panel-heading">
							請求金額
						</td>
						<td class="panel-body">
							<%= @order.amount_price %>
						</td>
					</tr>
				</table>
			</div>

</div>
